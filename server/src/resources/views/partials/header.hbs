{{!-- Modal Logout --}}
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Đăng xuất</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Bạn có chắc muốn đăng xuất?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-danger" id="btn-logout" >Xác nhận</button>
      </div>
    </div>
  </div>
</div>

<form method="POST" id="form-submit" action="/account/logout"></form>

{{!-- Modal show infor user --}}
<div class="modal fade bd-example-modal-lg" id="infor">
  <div class="modal-dialog modal-lg inforuser modal-dialog-centered">
    <div class="modal-content">

      <div class="modal-header">
        <h4 class="modal-title"><b>Thông tin tài khoản</b></h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

        <div class="modal-body">
            <div class="row">
              <div class="col-md-4 d-flex justify-content-center p-4">
                <img src="{{username.user.image}}" alt="image" width="236" height="236">
              </div>
              <div class="col-md-8 ml-auto pt-5">
                <h5>Tên tài khoản: <span class="userName">{{username.user.username}}</span></h5>
                <h5>Email: <span class="email">{{username.user.email}}</span></h5>
                <h5>Giới tính: <span class="gioiTinh">{{username.user.GT}}</span></h5>
                <h5>SĐT: <span class="sdt">{{username.user.SDT}}</span></h5>
                <h5>Địa chỉ: <span class="diaChi">{{username.user.address}}</span></h5>
              </div>
            </div>
        </div>
         
        <div class="modal-footer">
          <a class="btn btn-warning" title="Cập nhật thông tin" style="text-decoration: none; color: white;" href="/account/edit/{{username.user._id}}">Cập nhật thông tin</a>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
    </div>
  </div>
</div>
{{!-- zone script --}}
<script>
    document.addEventListener("DOMContentLoaded", function () {
      var form_submit = $("#form-submit");
      $("#btn-logout").click(function() {
          form_submit.submit();
      })
    });
</script>


